<mujoco>
    <compiler meshdir="assets/mlpro/mesh/" texturedir="assets/mlpro/texture/"/>
    <asset>
        <mesh name="arrow" file="Arrow.stl"/>
        <texture name="mlpro_logo" type="2d" file="logo.png"/>
        <material name="mlpro_mat" texture="mlpro_logo" rgba=".8 .8 .8 1"/>
    </asset>
    <worldbody>
    <!-- Light -->
    <light diffuse=".5 .5 .5" pos="0 0 6" dir="0 0 -1"/>

    <!-- Floor -->
	<geom type="plane" size="4 4 0.1" rgba=".9 0 0 1"/>

    <!-- Back with MLPro Logo -->
    <geom type="plane" material="mlpro_mat" size="4 3 0.1" pos="0 4 3" quat="0.7071068 0.7071068 0 0" rgba="1 1 1 1"/>
    
    <!-- Axis -->
    <geom type="mesh" mesh="arrow" pos="-3.5 2 1" quat="1 0 0 0" rgba="0 0 1 1"/>
    <geom type="mesh" mesh="arrow" pos="-3.5 2 1" quat="0.7071068 -0.7071068 0 0" rgba="0 1 0 1"/>
    <geom type="mesh" mesh="arrow" pos="-3.5 2 1" quat="0.7071068 0 0.7071068 0" rgba="1 0 0 1"/>

    </worldbody>
</mujoco>