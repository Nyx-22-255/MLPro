<mujoco>
	<option timestep="0.05" gravity="0 0 -9.81" integrator="RK4">
		<flag sensornoise="enable" energy="enable"/>
	</option>
	<worldbody>
        <light diffuse=".5 .5 .5" pos="0 0 3" dir="0 0 -1"/>
		<geom type="plane" size="1 1 0.1" rgba=".9 0 0 1"/>

		<body name="link1" pos="0 0 3" euler="0 0 0">
			<joint name="pin1" type="hinge" axis = "0 1 0" pos="0 0 -0.5"/>
			<inertial pos="0 0 0" mass="1" diaginertia="1 1 1" />
			<geom type="cylinder" size="0.05 0.5" rgba="0 .9 0 1"/>

			<!-- Second Link -->
			<body name="link2" pos="0 0.1 1" euler="0 0 0">
				<joint name="pin2" type="hinge" axis = "0 1 0" pos="0 0 -0.5"/>
				<inertial pos="0 0 0" mass="1" diaginertia="1 1 1" />
				<geom type="cylinder" size="0.05 0.5" rgba="0 0 0.9 1"/>
			</body>

		</body>
		
	</worldbody>

	<actuator>
		<motor joint="pin1" name="pin1" gear="1" ctrllimited="true" ctrlrange="-50 50"/>
	</actuator>
</mujoco>
